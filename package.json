{
  "name": "eris-boiler",
  "version": "3.0.0-beta.7",
  "description": "A Discord bot framework using eris",
  "main": "index.js",
  "bin": {
    "@alex-taxiera/eris-boiler": "cli/eris-boiler",
    "eris-boiler": "cli/eris-boiler"
  },
  "publishConfig": {
    "access": "publish"
  },
  "scripts": {
    "test": "nyc --reporter lcov ava **/*.test.js",
    "dev": "node bin/dev.js",
    "doc": "jsdoc -c config/.jsdoc.json",
    "ts": "jsdoc -c config/.jsdoc-ts.json",
    "lint": "eslint .",
    "pre-commit": "./bin/hooks/pre-commit",
    "post-merge": "./bin/hooks/post-merge",
    "migrate:make": "knex migrate:make",
    "migrate:run": "knex migrate:latest"
  },
  "husky": {
    "hooks": {
      "post-merge": "npm run post-merge",
      "pre-commit": "npm run pre-commit",
      "pre-push": "npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alex-taxiera/eris-boiler.git"
  },
  "keywords": [
    "discord",
    "bot",
    "boiler",
    "help",
    "commands"
  ],
  "author": "Alex Taxiera",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/alex-taxiera/eris-boiler/issues"
  },
  "homepage": "https://alex-taxiera.github.io/eris-boiler/",
  "dependencies": {
    "arg": "^4.1.1",
    "colors": "^1.3.3",
    "dateformat": "^3.0.3",
    "inquirer": "^7.0.0"
  },
  "optionalDependencies": {
    "knex": "^0.19.5",
    "mysql": "^2.17.1",
    "pg": "^7.10.0",
    "simple-knex": "^1.0.0-beta.5",
    "sqlite": "^3.0.3"
  },
  "peerDependencies": {
    "eris": "^0.10.1"
  },
  "devDependencies": {
    "ava": "1.4.1",
    "dotenv": "^8.0.0",
    "eris": "^0.10.1",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^2.2.0",
    "jsdoc": "^3.6.3",
    "ncp": "^2.0.0",
    "nodemon": "^1.19.0",
    "nyc": "^14.1.0",
    "sinon": "^7.3.2"
  },
  "files": [
    "cli/template",
    "index.js",
    "*lib/",
    "boiler/",
    "config/",
    "!config/.jsdoc*",
    "!lib/**/*.test.js",
    "!lib/**/broken-files/"
  ]
}
