{
  "name": "root",
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "lint": "lerna run lint",
    "lint:fix": "npm run lint -- -- -- --fix",
    "pretest": "npm run build",
    "test": "ava",
