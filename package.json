    "@ovos-media/ts-transform-paths": "^1.7.18-1",
    "@types/node": "^16.11.33",
    "@typescript-eslint/parser": "^4.33.0",
    "ava": "^4.2.0",
    "eslint": "^7.32.0",
    "ts-node-dev": "1.1.8",
    "tsconfig-paths": "^3.14.1",
    "ttypescript": "^1.5.13",
    "typescript": "^4.6.4"
  }
