{
  "name": "root",
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "lint": "lerna run lint",
    "lint:fix": "npm run lint -- -- -- --fix",
    "pretest": "npm run build",
    "test": "ava",
    "prebuild": "lerna run clean",
    "build": "lerna run build",
    "preversion": "npm run build && npm run lint",
    "version": "lerna version",
    "prepublishOnly": "npm run build",
    "publish": "lerna publish from-package",
    "publish:next": "npm run publish -- --dist-tag next",
    "install:prod": "npm ci --omit=dev --ignore-scripts"
  },
  "devDependencies": {
    "@alex-taxiera/eslint-config-ts": "^2.0.1",
    "@lerna-lite/cli": "^1.6.0",
    "@lerna-lite/run": "^1.6.0",
    "@ovos-media/ts-transform-paths": "^1.7.18-1",
    "@types/node": "^16.11.33",
    "@typescript-eslint/parser": "^4.33.0",
    "ava": "^4.2.0",
    "eslint": "^7.32.0",
    "npm-run-all": "^4.1.5",
    "ttypescript": "^1.5.13",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "tsup": "^6.1.3"
  }
}
