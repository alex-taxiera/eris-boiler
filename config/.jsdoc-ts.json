{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["lib", "README.md"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(test-files)"
  },
  "plugins": ["plugins/markdown"],
  "markdown": {
    "parser": "gfm",
    "hardwrap": true
  },
  "templates": {
    "name": "eris-boiler",
    "github": "https://github.com/alex-taxiera/eris-boiler",
    "cleverLinks": true,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true
    }
  },
  "opts": {
    "encoding": "utf8",
    "package": "package.json",
    "template": "./node_modules/tsd-jsdoc/dist",
    "destination": "./",
    "recurse": true
  }
}
